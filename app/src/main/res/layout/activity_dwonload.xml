<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".day6_downtest.DwonloadActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startDwonload"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/msg5"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pausedDwonload"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/msg6"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/canceledDwonload"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/msg7"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/progressText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/msg5"
        />


</LinearLayout>